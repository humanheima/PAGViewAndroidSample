<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:minHeight="132dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">


    <!--律动View-->
    <org.libpag.PAGView
            android:id="@+id/pag_view_rhythm"
            android:layout_width="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:layout_height="80dp" />

    <org.libpag.PAGView
            android:id="@+id/pag_view_rhythm2"
            android:layout_toEndOf="@+id/pag_view_rhythm"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_height="16dp" />

    <org.libpag.PAGView
            android:id="@+id/pag_view_rhythm3"
            android:layout_toEndOf="@+id/pag_view_rhythm2"
            android:layout_width="104dp"
            android:layout_marginStart="8dp"
            android:layout_height="104dp"
            android:layout_centerVertical="true" />

    <ImageView
            android:id="@+id/iv_play_pause"
            android:src="@drawable/ic_voice_play"
            android:layout_width="26dp"
            android:layout_marginEnd="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_height="26dp" />

</RelativeLayout>